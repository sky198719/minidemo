
.login-page{
  position: relative;
}
.cover-banner{
  width:100%;
  height:40vh;
  background:#ccc;
  position: absolute;
  z-index:1;
}
.cover-logo{
  display: block;
  position: absolute;
  top:150rpx;
  left: 50%;
  transform: translateX(-50%);
  width:214rpx;
  height:126rpx;
  z-index: 9
}
.cover-main{
  width:90%;
  height:50vh;
  background: #fff;
  border-radius: 20rpx;
  padding:80rpx 40rpx;
  box-sizing: border-box;
  position: absolute;
  left:50%;
  top:25vh;
  transform: translateX(-50%);
  z-index:9;
  box-shadow:1rpx 1rpx 11rpx #999;
}
.input-icon{
  display: inline-block;
  width:40rpx;
  height: 35rpx;
  
}
.input-class input{
  width: 100%;
  padding-left: 40rpx;
}
.btn-class{
  display: block;
  width:100%;
  border-radius: 50rpx;
}
.register-class{
  font-size: 24rpx;
  margin-top:50rpx;
  text-align: center;
}
.register-class text{
  color:#989898;
}