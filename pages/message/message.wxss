.message-page{
  padding: 30rpx;
  box-sizing: border-box;
}
.message-main-title{
  font-size: 36rpx;
  font-weight: bold;
  color:#000;
}
.message-m-n-msg{
  display: block;
  position: absolute;
  top:40%;
  left:50%;
  transform: translate(-50%,-50%);
  width:400rpx;
  height:500rpx;
}
.message-m-n-msg text{
  color:#188afa;
  font-size: 36rpx;
  text-align: center;
  display: block;
  width:100%;
}
.message-list-item{
  background: #fff;
  border-radius: 25rpx;
  width:100%;
  height:300rpx;
  padding:30rpx 40rpx;
  box-sizing: border-box;
  position: relative;
  margin-top:30rpx;
}
.m-l-i-tip{
  position: absolute;
  top:50rpx;
  left:0;
  width:10rpx;
  height:40rpx;
  border-radius: 30%;
  background: #188afa;
}
.message-list-top{
  display: flex;
  height:80rpx;
  font-size: 36rpx;
  align-items: center;
  justify-content: space-between;
}
.m-l-t-btn{
  width:150rpx;
  height:60rpx;
  border-radius: 50rpx;
  text-align: center;
  color:#449cff;
  background:#f2f2f2;
  font-size: 24rpx;
  line-height:60rpx;
}
.message-list-info{
  height:60rpx;
  line-height: 60rpx;
  color:#afafaf;
  font-size: 30rox;
}
.alert-box{
  display: none;
}